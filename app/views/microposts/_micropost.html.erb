<li id="micropost-<%=  micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.avatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user_name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag(micropost.picture_url, size: Settings.microposts.picture_size ) if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t ".posted" %>
    <% if current_user?(micropost.user) %>
      <%= time_ago_in_words micropost.created_at %> <%= t ".ago" %>.
      <%= link_to t(".delete"), micropost, method: :delete, data: { confirm: t(".you_sure") } %>
      <% end %>
  </span>
</li>
