
<% if logged_in? %>
  <% provide :title, t("static_pages.home.title") %>
  <div class="row">
    <aside class="col-md-4">
      <section class="col-md-12">
        <%= render "shared/user_info" %>
      </section>
      <section class="col-md-12 micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".welcome" %></h1>
    <%= link_to t(".signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
