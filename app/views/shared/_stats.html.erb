<% @user ||= current_user %>
<div class="stats">
  <%= link_to following_user_path(@user)  do %>
    <strong id="following" class="stats">
      <%= @user.following.size %>
    </strong>
    <%= t ".following" %>
  <% end %>
  <%= link_to followers_user_path(@user)  do %>
    <strong id="followers" class="stats">
      <%= @user.followers.size %>
    </strong>
    <%= t ".followers" %>
  <% end %>
</div>
